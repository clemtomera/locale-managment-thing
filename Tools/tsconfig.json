{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "./scripts",
    "outDir": "./dist"
  },
  "include": ["scripts/**/*.ts"]
}
